@model PasswordChangeViewModel

<html>
<head>
    <title>Đổi Mật Khẩu</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="@Url.Content("~/Content/custom.css")" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Register.css")" rel="stylesheet" />
</head>
<body>
    <div class="Dangky-container">
    <!-- Display Success Message -->
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Form to Change Password -->
    @using (Html.BeginForm("DoiMatKhau", "Account", FormMethod.Post, new { @class = "Dangky-form" }))
    {
        @Html.AntiForgeryToken()

        <h2>Đổi Mật Khẩu</h2>

        <!-- Display validation summary -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Current Password -->
        <div class="input">
            @Html.PasswordFor(m => m.CurrentPassword, new { placeholder = "Nhập mật khẩu hiện tại", @class = "form-control" })
            @Html.LabelFor(m => m.CurrentPassword, "Nhập mật khẩu hiện tại", new { @class = "form-label" })
            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
        </div>

        <!-- New Password -->
        <div class="input">
            @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Nhập mật khẩu mới", @class = "form-control" })
            @Html.LabelFor(m => m.NewPassword, "Nhập mật khẩu mới", new { @class = "form-label" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>

        <!-- Confirm New Password -->
        <div class="input">
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Xác nhận mật khẩu mới", @class = "form-control" })
            @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu mới", new { @class = "form-label" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <button class="signup" type="submit">Đổi Mật Khẩu</button>
    }
</div>
</body>
</html>
