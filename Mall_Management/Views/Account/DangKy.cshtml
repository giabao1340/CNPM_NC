@model Mall_Management.Models.Account

@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ENjdO4Dr2bkBIFxQpeo5rt/ABirPb2zO6GGD1mxo4T+49jFawRA6aW1JgKtE2vK" crossorigin="anonymous">

</head>
<body>
    <main>
        <div class="login-container">
            @using (Html.BeginForm("DangKy", "Account", FormMethod.Post, new { @class = "Login-form" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center mb-4">Đăng Ký</h2>

                <!-- Validation Summary -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Full Name -->
                <div class="input">
                    @Html.TextBoxFor(m => m.FullName, new { placeholder = "Họ và Tên", @class = "form-control" })
                    @Html.LabelFor(m => m.FullName, "Họ và Tên", new { @class = "form-label" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                </div>

                <!-- Username -->
                <div class="input">
                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Tên Đăng Nhập", @class = "form-control" })
                    @Html.LabelFor(m => m.Username, "Tên Đăng Nhập", new { @class = "form-label" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <!-- Email -->
                <div class="input">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Địa chỉ email", @class = "form-control" })
                    @Html.LabelFor(m => m.Email, "Địa chỉ email", new { @class = "form-label" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <!-- Phone -->
                <div class="input">
                    @Html.TextBoxFor(m => m.Phone, new { placeholder = "Số Điện Thoại", @class = "form-control" })
                    @Html.LabelFor(m => m.Phone, "Số Điện Thoại", new { @class = "form-label" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>

                <!-- Password -->
                <div class="input">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Mật Khẩu", @class = "form-control" })
                    @Html.LabelFor(m => m.Password, "Mật Khẩu", new { @class = "form-label" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <!-- Confirm Password -->
                <div class="input">
                    @Html.PasswordFor(m => m.CFPassword, new { placeholder = "Xác Nhận Mật Khẩu", @class = "form-control" })
                    @Html.LabelFor(m => m.CFPassword, "Xác Nhận Mật Khẩu", new { @class = "form-label" })
                    @Html.ValidationMessageFor(m => m.CFPassword, "", new { @class = "text-danger" })
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
            }
        </div>

    </main>
</body>
</html>
