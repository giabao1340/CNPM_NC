@model Mall_Management.Models.Account

@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Đăng Ký</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="@Url.Content("~/Content/custom.css")" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Register.css")" rel="stylesheet" />
</head>
<body>
    <div class="Dangky-container">
        @using (Html.BeginForm("DangKy", "Account", FormMethod.Post, new { @class = "Dangky-form" }))
        {
            @Html.AntiForgeryToken()
            <h2>Đăng Ký</h2>

            <div class="input">
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Họ và Tên" })
                @Html.LabelFor(m => m.Username, "Họ và Tên")
                @Html.ValidationMessageFor(m => m.Username)
            </div>

            <div class="input">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Địa chỉ email" })
                @Html.LabelFor(m => m.Email, "Địa chỉ email")
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="input">
                @Html.TextBoxFor(m => m.Phone, new { placeholder = "Số Điện Thoại" })
                @Html.LabelFor(m => m.Phone, "Số Điện Thoại")
                @Html.ValidationMessageFor(m => m.Phone)
            </div>

            <div class="input">
                @Html.PasswordFor(m => m.PasswordHash, new { placeholder = "Mật Khẩu" })
                @Html.LabelFor(m => m.PasswordHash, "Mật Khẩu")
                @Html.ValidationMessageFor(m => m.PasswordHash)
            </div>

            <div class="input">
                @Html.PasswordFor(m => m.CFPassword, new { placeholder = "Xác Nhận Mật Khẩu" })
                @Html.LabelFor(m => m.CFPassword, "Xác Nhận Mật Khẩu")
                @Html.ValidationMessageFor(m => m.CFPassword)
            </div>


            <button class="signup" type="submit">Đăng Ký</button>
        }
    </div>
</body>
</html>
