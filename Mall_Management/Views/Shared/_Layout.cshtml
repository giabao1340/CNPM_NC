    <style>
        /* Avatar dropdown */
        .avatar-dropdown {
            position: relative;
        }


        .avatar-toggle {
            cursor: pointer;
        }

        .avatar-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            transition: box-shadow 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .avatar-image:hover {
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            }

        /* Dropdown menu styling */
        .avatar-menu {
            list-style-type: none; /* Xóa dấu chấm */
            display: none;
            position: absolute;
            top: 110%; /* Điều chỉnh khoảng cách dưới avatar */
            right: 0;
            width: 180px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            padding: 8px 0;
            z-index: 1000;
        }

            /* Hiển thị dropdown khi bật */
            .avatar-menu.show {
                display: block;
            }

            /* Item styling */
            .avatar-menu .dropdown-item {
                padding: 10px 16px;
                font-size: 14px;
                color: #333;
                text-decoration: none;
                transition: background-color 0.3s, color 0.3s;
                display: flex;
                align-items: center;
            }

                .avatar-menu .dropdown-item:hover {
                    background-color: #f8f9fa;
                    color: #007bff;
                    font-weight: 500;
                    border-radius: 4px;
                }

                /* Optional: Styling for logout and other actions */
                .avatar-menu .dropdown-item:first-child {
                    border-top-left-radius: 8px;
                    border-top-right-radius: 8px;
                }

                .avatar-menu .dropdown-item:last-child {
                    border-bottom-left-radius: 8px;
                    border-bottom-right-radius: 8px;
                }
                .center {
                    display: flex;
                    justify-content: center; /* Căn giữa theo chiều ngang */
                    align-items: center; /* Căn giữa theo chiều dọc */
                    height: 100vh; /* Chiều cao của div bằng 100% chiều cao màn hình */
                    margin:0px;
                }
                li a{
                    text-decoration: none;
                }


    </style>
</head>
