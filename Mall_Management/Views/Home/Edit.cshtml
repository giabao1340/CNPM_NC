@model Mall_Management.Models.Account

@{
    ViewBag.Title = "Edit Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark text-center">
                    <h2>Edit Information</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.FullName, "Full Name")
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Phone, "Phone")
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Email, "Email")
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a href="@Url.Action("Infor", "Home", new { id = Model.AccountID })" class="btn btn-secondary">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
