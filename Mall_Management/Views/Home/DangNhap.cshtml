
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="@Url.Content("~/Content/custom.css")" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <form class="login-form">
            <h2>Đăng nhập</h2>
            <div class="input-group">
                <input type="text" placeholder=" " id="username">
                <label for="username">Tên đăng nhập</label>
            </div>
            <div class="Password">
                <input type="password" placeholder=" " id="pass">
                <label for="username">Mật Khẩu</label>
            </div>
            <button class="signin" type="submit">Đăng nhập</button>
        </form>
        <a href="#" class="forgot-password">Quên mật khẩu</a>
        <div class="line-with-text">
            <span class="line-text">Hoặc</span>
        </div>
        <div class="fb-gg-btn">
            <button class="fb-btn">
                <div class="chua-fb">
                    <div class="fb">
                        <img src="~/Images/fb.jpg" alt="Facebook Logo">
                    </div>
                    <div class="text-fb"><h4>Facebook</h4></div>
                </div>
            </button>
            <button class="gg-btn">
                <div class="chua-gg">
                    <div class="gg">
                        <img src="~/Images/gg.jpg" alt="Google Logo">
                    </div>
                    <div class="text-gg"><h4>Google</h4></div>
                </div>
            </button>
        </div>
        <div class="dangki">
            <div class="textbt"> Bạn chưa có tài khoản? </div>
            <div class="link">
                <a href="https://localhost:44395/Home/dangki">Đăng Ký</a>
            </div>
        </div>
    </div>
</body>
</html>