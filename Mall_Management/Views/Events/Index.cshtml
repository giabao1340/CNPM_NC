@model IEnumerable<Mall_Management.Models.Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@functions {
    public string Truncate(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text)) return text;

        return text.Length > maxLength ? text.Substring(0, maxLength) + "..." : text;
    }
}

<div class="d-flex flex-column-fluid">
    <div class="container  ">
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                </div>
                <!--begin::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar">
                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                        <!--begin::Add Game Account-->
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary create-button" })
                        <!--end::Add Game Account-->
                    </div>
                    <!--end::Toolbar-->
                </div>
                <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body py-4">
                <!--begin::Table-->
                <div id="kt_table_users_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="table-responsive">
                        <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="list-product">
                            <!--begin::Table head-->
                            <thead>
                                <tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0">
                                    <th class="min-w-50px">Tên sự kiện</th>
                                    <th class="min-w-125px">Hình ảnh</th>
                                    <th class="min-w-150px">Nội dung</th>
                                    <th class="min-w-125px">Ngày bắt đâu</th>
                                    <th class="min-w-125px">Ngày kết thúc</th> <!-- Thêm cột Danh mục -->
                                    <th class="min-w-125px">Đơn vị tổ chức</th>
                                    <th class="text-end min-w-100px">Thương hiệu</th>
                                </tr>
                            </thead>
                            <!--end::Table head-->
                            <!--begin::Table body-->
                            <tbody class="text-gray-600 fw-bold h-100">
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="odd row-height" id="item_@item.BrandID">
                                            <td>@item.EventName</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Image))
                                                {
                                                    <img src="@Url.Content(item.Image)" alt="Brand Image" style="width: 100px; height: auto;" />
                                                }
                                                else
                                                {
                                                    <span>No image available</span>
                                                }
                                            </td>
                                            <td>@Truncate(item.Description, 50)</td>
                                            <td>@item.StartDate</td>
                                            <td>@item.EndDate</td>
                                            <td>@item.Register</td>

                                            <!-- Hiển thị tên Danh mục -->
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Brand.BrandName)
                                            </td>
                                            <td class="text-end">
                                                <div class="dropdown">
                                                    <a href="#" class="btn btn-light btn-active-light-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                                        Hành động
                                                        <span class="svg-icon svg-icon-5 m-0">
                                                            <!-- Thêm nội dung SVG icon tại đây -->
                                                        </span>
                                                    </a>

                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <!-- Edit -->
                                                        <li>
                                                            <a href="@Url.Action("Edit", "Events", new { id = item.EventID })" class="dropdown-item">
                                                                <span class="svg-icon svg-icon-5 me-2">
                                                                    <!-- Thêm icon cho Edit (ví dụ: bút chì) -->
                                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152L0 424c0 48.6 39.4 88 88 88l272 0c48.6 0 88-39.4 88-88l0-112c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 112c0 22.1-17.9 40-40 40L88 464c-22.1 0-40-17.9-40-40l0-272c0-22.1 17.9-40 40-40l112 0c13.3 0 24-10.7 24-24s-10.7-24-24-24L88 64z" /></svg>
                                                                </span>
                                                                Chỉnh sửa
                                                            </a>
                                                        </li>
                                                        <!-- Delete -->
                                                        <!-- Delete -->
                                                        <li>
                                                            <a href="javascript:void(0);" class="dropdown-item" onclick="openDeleteModal('@Url.Action("Delete", "Events", new { id = item.EventID })');">
                                                                <span class="svg-icon svg-icon-5 me-2">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z" /></svg>
                                                                </span>
                                                                Xóa
                                                            </a>
                                                        </li>

                                                    </ul>
                                                </div>

                                        </tr>
                                    }
                                }
                            </tbody>

                            <!--end::Table body-->
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start">
                        </div>
                        <div class="col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end">
                        </div>
                    </div>
                </div>
                <!--end::Table-->
            </div>
            <!--end::Card body-->
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/AdminJs/brands.js"></script>
}

<!-- Bootstrap Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sự kiện này?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <a href="#" id="confirmDeleteBtn" class="btn btn-danger">Có, Xóa</a>
            </div>
        </div>
    </div>
</div>

<script>
    var eventIdToDelete;

    function openDeleteModal(deleteUrl, eventId) {
        // Lưu lại ID thương hiệu cần xóa
        eventIdToDelete = eventId;

        // Hiển thị modal
        var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
        deleteModal.show();

        // Gắn sự kiện xóa cho nút xác nhận
        document.getElementById('confirmDeleteBtn').onclick = function () {
            deleteBrand(deleteUrl);
        };
    }

    function deleteBrand(deleteUrl) {
        $.ajax({
            url: deleteUrl,
            type: "POST",
            data: { id: eventIdToDelete },
            success: function (response) {
                if (response.success) {
                    // Xóa thành công, bạn có thể refresh lại bảng dữ liệu hoặc xóa dòng tương ứng
                    //alert(response.message);
                    location.reload();  // Tải lại trang hoặc cập nhật bảng dữ liệu
                } else {
                    // Xóa thất bại
                    alert(response.message);
                }
            },
            error: function (xhr, status, error) {
                alert("Có lỗi xảy ra: " + error);
            }
        });
    }
</script>
